<footer>
  <% if logged_in? %>
    <div class="login-info">
      Logged in as <%= current_user.email %>
      <%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-primary logout-link" %>
    </div>
  <% elsif request.fullpath != login_path %>
    <%= link_to 'Login', login_path, class: "btn btn-primary login-link" %>
  <% else %>
    <%= link_to 'Sign Up', new_user_path %>
  <% end %>
</footer>


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card" style="margin-bottom: 100px;">
        <div class="card-header">
          Timesheets
        </div>
        <% if @user.time_sheets.exists? %>
          <div class="time-sheets-table card-body">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Description</th>
                  <th>Rate</th>
                  <th>Total Time</th>
                  <th>Total Cost</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @time_sheets.each do |time_sheet| %>
                  <tr>
                    <td><%= time_sheet.description %></td>
                    <td><%= number_to_currency(time_sheet.rate) %></td>
                    <td><%= time_sheet.total_time %> minutes</td>
                    <td><%= number_to_currency(time_sheet.total_cost) %></td>
                    <td>
                      <%= link_to 'Show', user_time_sheet_path(@user, time_sheet), class: "card-link" %>
                      <%= link_to 'Edit', edit_user_time_sheet_path(@user, time_sheet), class: "card-link" %>
                      <%= button_to 'Delete', user_time_sheet_path(@user, time_sheet), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="no-time-sheets card-body">
            <h5 class="card-title">No Timesheets</h5>
          </div>
        <% end %>
        <div class="card-footer">
          <% if (@user) %>
            <%= link_to 'New Timesheet', new_user_time_sheet_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div
      </div>
    </div>
  </div>
</div>

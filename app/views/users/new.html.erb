<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col md-6">
      <div class="card" style="margin-bottom: 100px;">
        <div class="card-header">
          Sign up
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local:true) do |form| %>
            <% if @user.errors.any? %>
              <div id="error">
                <h2><%= pluralize(@user.errors.count, "error") %> prevented this user from being created:</h2>
                <ul>
                  <% @user.errors.full_meesages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

          <div class="mb-3">
             <%= form.label :email, class: "form-label" %>
             <%= form.email_field :email, id: :user_email, class: "form-control" %>
          </div>
 
          <div class="mb-3">
             <%= form.label :name, class: "form-label" %>
             <%= form.text_field :name, id: :user_name, class: "form-control" %>
          </div>

          <div class="mb-3">
             <%= form.label :password, class: "form-label" %>
             <%= form.password_field :password, id: :user_password, class: "form-control" %>
          </div>
  
          <div class="mb-3">
             <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
             <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control" %>
          </div>
  
          <div class="actions">
            <%= form.submit "Sign Up", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h1>Sign up</h1>

<%= form_with(model: @user, local:true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented this user from being created:</h2>

      <ul>
      <% @user.errors.full_meesages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
     </div>
   <% end %>

  <div class="field">
     <%= form.label :email %>
     <%= form.email_field :email, id: :user_email %>
  </div>
 
  
  <div class="field">
     <%= form.label :name %>
     <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="actions">
    <%= form.submit "Sign Up" %>
  </div>
<% end %>
